# Agentic Insight Analyst - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration
# =============================================================================

# OpenAI API Key (required)
OPENAI_API_KEY=your-openai-api-key-here

# Model selection (default: gpt-4)
LLM_MODEL=gpt-4

# Sampling temperature (0.0 - 1.0)
LLM_TEMPERATURE=0.3

# Maximum tokens per LLM call
LLM_MAX_TOKENS=2048

# =============================================================================
# Agent Configuration
# =============================================================================

# Maximum iterations before forced stop (safety limit)
MAX_ITERATIONS=10

# Minimum improvement threshold to continue iterating (0.0 - 1.0)
MIN_IMPROVEMENT_THRESHOLD=0.1

# Enable verbose logging (true/false)
VERBOSE_LOGGING=true

# =============================================================================
# API Configuration
# =============================================================================

# API host and port
API_HOST=0.0.0.0
API_PORT=8000

# Enable CORS for all origins (set to false in production)
CORS_ALLOW_ALL=true
